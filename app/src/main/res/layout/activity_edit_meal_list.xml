<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cook"
    tools:context=".EditMealList">

    <ListView
        android:id="@+id/mealListTable"
        android:layout_width="415dp"
        android:layout_height="661dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/meal_list_item"></ListView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mealListDeleteMealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/mealListTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mealListBackButton"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mealListCreateNewMealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create "
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/mealListTable"
        app:layout_constraintEnd_toStartOf="@id/mealListBackButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mealListBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/mealListTable"
        app:layout_constraintEnd_toStartOf="@id/mealListDeleteMealButton"
        app:layout_constraintStart_toEndOf="@id/mealListCreateNewMealButton"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>