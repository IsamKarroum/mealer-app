<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="name"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="cuisineType"
        android:id="@+id/cuisinetype"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cuisinetype"
        android:id="@+id/ingredients"
        android:paddingHorizontal="15dp"
        android:text="ingredients"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ingredients"
        android:id="@+id/allergens"
        android:paddingHorizontal="15dp"
        android:text="allergens"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:id="@+id/price"
        android:paddingHorizontal="15dp"
        android:text="price"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/allergens"
        android:layout_below="@+id/allergens"
        android:id="@+id/description"
        android:paddingHorizontal="15dp"
        android:text="description"
        android:textSize="12dp"/>

</RelativeLayout>