<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#7079AA"
    tools:context=".WelcomeCookScreen">

    <TextView
        android:id="@+id/WelcomeMessage"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Welcome Cook"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="318dp"
        android:backgroundTint="@color/black"
        android:text="logout"
        android:textColor="@color/white"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/MessageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/WelcomeMessage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:singleLine="false"
        android:text="Suspension Status"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MessageBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#40ffffff"
        android:numStars="6"
        android:padding="20dp"
        android:progressTint="#FFEEEA00"
        android:rating="2.5"
        android:secondaryProgressTint="#FFEEEA00"
        tools:context=".WelcomeCookScreen"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/ratingMessage"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Your total rating on offered meals:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/CookHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/editMenuButton"
            android:backgroundTint="#40ffffff"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:paddingHorizontal="50dp"
            android:text="Home"
            android:textColor="@color/purple_500"
            android:textSize="9dp"
            android:visibility="visible"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#40ffffff"
            android:drawableTop="@drawable/ic_baseline_menu_24"
            android:paddingHorizontal="40dp"
            android:text="Edit Menu"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/CookSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editMenuButton"
            android:backgroundTint="#40ffffff"
            android:drawableTop="@drawable/ic_baseline_notificationsblack"
            android:paddingHorizontal="35dp"
            android:text="Requests"
            android:textColor="@color/black"
            android:textSize="9dp"
            android:visibility="visible"
            tools:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>