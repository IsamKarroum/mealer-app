<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#40ffffff">

    <androidx.cardview.widget.CardView
        cardCornerRadius="20dp"
        cardElevation="10dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#40ffffff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chefName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealname"
                android:layout_marginTop="10dp"
                android:text="Chef Name"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/mealname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Meal"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mealDescription"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chefName"
                android:paddingTop="10dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="match_parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/denyRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Deny Request"
            android:textSize="7dp"
            app:backgroundTint="@color/black"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/acceptRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/denyRequest"
            android:textSize="7dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="Accept Request"
            app:backgroundTint="@color/green"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </RelativeLayout>


</LinearLayout>